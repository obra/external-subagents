{
  "name": "codex-subagent-cli",
  "version": "0.1.0",
  "description": "TypeScript CLI for managing Codex subagent threads",
  "type": "module",
  "bin": {
    "codex-subagent": "../codex-subagent"
  },
  "scripts": {
    "build": "node build.mjs",
    "dev": "tsx src/bin/codex-subagent.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepare": "node run-prek-install.mjs",
    "demo": "tsx demo-watch.ts"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/coverage-istanbul": "^1.6.1",
    "chokidar": "^3.6.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "execa": "^9.6.0",
    "yaml": "^2.4.3"
  }
}
